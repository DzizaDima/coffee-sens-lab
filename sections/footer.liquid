{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}

{%- liquid
  for block in section.blocks
    if block.type == 'menu_navigation'
      assign menu_navigation = block.settings.menu
    endif
    if block.type == 'menu_legacy'
      assign menu_legacy = block.settings.menu
    endif
  endfor
-%}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="container">
    <div class="footer_inner">
      <div class="footer_top">
        {%- if section.settings.newsletter_enable -%}
          <div class="footer-block__newsletter">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2 class="footer-block__heading">{{ section.settings.newsletter_heading }}</h2>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper">
                <div class="field">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="{{ 'newsletter.label' | t }}"
                    required
                  >
                  <label class="field__label" for="NewsletterForm--{{ section.id }}">
                    {{ 'newsletter.label' | t }}
                  </label>
                  <button
                    type="submit"
                    class="newsletter-form__button field__button"
                    name="commit"
                    id="Subscribe"
                    aria-label="{{ 'newsletter.button_label' | t }}"
                  >
                    <span class="svg-wrapper" aria-hidden="true">
                      {% render 'arrow-right' %}
                    </span>
                  </button>
                </div>
                {%- if form.errors -%}
                  <small class="newsletter-form__message form__message" id="ContactFooter-error" role="alert">
                    <span class="svg-wrapper" aria-hidden="true">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="ContactFooter-success"
                  tabindex="-1"
                  autofocus
                  role="status"
                  aria-live="polite"
                >
                  <span class="svg-wrapper" aria-hidden="true">
                    {{- 'icon-success.svg' | inline_asset_content -}}
                  </span>
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {%- endform -%}
          </div>
        {%- endif -%}
        {%- if menu_navigation != blank and menu_navigation.links.size > 0 -%}
          <nav class="footer_top-menu" aria-label="Footer navigation">
            <ul class="footer_top-menu-list {% unless section.settings.newsletter_enable %}footer_top-menu--full-width{% endunless %}">
              {% for menu in menu_navigation.links %}
                <li class="footer_top-menu-item">
                  <a href="{{ menu.url }}" class="footer_top-menu-link --footer-link">
                    {{- menu.title | escape -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {%- endif -%}
      </div>
      {%- if section.settings.logo_enable and section.settings.logo != blank -%}
        <div class="footer_logo">
          {% assign logo_alt = shop.name | default: 'Logo' %}
          {{
            section.settings.logo
            | image_url: width: 1352
            | image_tag: class: 'footer_logo-image', loading: 'lazy', alt: logo_alt
          }}
        </div>
      {%- endif -%}
      {%- if menu_legacy != blank and menu_legacy.links.size > 0 -%}
        <nav class="footer_bottom" aria-label="Footer legal links">
          <ul class="footer_bottom-list">
            {% for menu in menu_legacy.links %}
              <li class="footer_bottom-item">
                <a href="{{ menu.url }}" class="footer_bottom-link --footer-link">
                  {{- menu.title | escape -}}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.footer.settings.logo.label"
    },
    {
      "type": "checkbox",
      "id": "logo_enable",
      "default": true,
      "label": "t:sections.footer.settings.logo_enable.label"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__1.content",
      "info": "t:sections.footer.settings.header__1.info"
    },
    {
      "type": "richtext",
      "id": "newsletter_heading",
      "label": "t:sections.footer.settings.newsletter_heading.label"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "t:sections.footer.settings.newsletter_enable.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "menu_navigation",
      "name": "t:sections.footer.blocks.menu_navigation.name",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:sections.footer.blocks.menu_navigation.settings.menu.label"
        }
      ]
    },
    {
      "type": "menu_legacy",
      "name": "t:sections.footer.blocks.menu_legacy.name",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:sections.footer.blocks.menu_legacy.settings.menu.label"
        }
      ]
    }
  ]
}
{% endschema %}
